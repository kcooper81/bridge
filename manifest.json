{
  "manifest_version": 3,
  "name": "TeamPrompt",
  "version": "1.0.0",
  "description": "Save, organize, and share AI prompts across your team. Continue conversations across ChatGPT, Claude, Gemini, and more.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*",
        "*://perplexity.ai/*",
        "*://www.perplexity.ai/*",
        "*://copilot.microsoft.com/*",
        "*://poe.com/*",
        "*://www.poe.com/*",
        "*://chat.deepseek.com/*",
        "*://grok.com/*",
        "*://www.grok.com/*",
        "*://chat.mistral.ai/*",
        "*://huggingface.co/chat/*",
        "*://pi.ai/*",
        "*://coral.cohere.com/*",
        "*://you.com/*",
        "*://www.you.com/*",
        "*://meta.ai/*",
        "*://www.meta.ai/*",
        "*://phind.com/*",
        "*://www.phind.com/*",
        "*://notion.so/*",
        "*://www.notion.so/*"
      ],
      "js": ["src/content/ai-injector.js"],
      "css": ["src/content/ai-injector.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/context-extractor.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/icons/icon-16.png",
      "48": "src/icons/icon-48.png",
      "128": "src/icons/icon-128.png"
    }
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "src/icons/icon-16.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  "commands": {
    "copy-context": {
      "suggested_key": { "default": "Alt+C" },
      "description": "Copy active project context to clipboard"
    },
    "toggle-tracking": {
      "suggested_key": { "default": "Alt+T" },
      "description": "Toggle activity tracking on/off"
    },
    "quick-bridge": {
      "suggested_key": { "default": "Alt+B" },
      "description": "Bridge current AI conversation to another tool"
    }
  }
}
